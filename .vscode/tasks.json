{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run program",
			"type": "shell",
			"command": "./mvnw clean compile exec:java@run",
			"windows": {
				"command": ".\\mvnw.cmd clean compile exec:java@run"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "run tests",
			"type": "shell",
			"command": "./mvnw clean compile test",
			"windows": {
				"command": ".\\mvnw.cmd clean compile test"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}